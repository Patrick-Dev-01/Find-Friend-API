generator client {
  provider = "prisma-client-js"
}

model Org {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  password_hash String
  phone         String
  cep           String
  address       String
  neighborhood  String
  complement    String
  number        Int
  city          String
  uf            String
}

